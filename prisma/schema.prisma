// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Modelo de Usuario
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts         Account[]
  sessions         Session[]
  animeList        AnimeListEntry[]
  reviews          Review[]
  recommendations  Recommendation[]
  likes            RecommendationLike[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Modelo para la lista de anime del usuario
model AnimeListEntry {
  id             String   @id @default(cuid())
  userId         String
  animeId        Int      // ID de MyAnimeList/Jikan API
  status         AnimeStatus @default(PLAN_TO_WATCH)
  score          Float?   // Calificación del usuario (0-10)
  progress       Int      @default(0) // Episodios vistos
  startedAt      DateTime?
  completedAt    DateTime?
  notes          String?  @db.Text
  isFavorite     Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviews        Review[]

  @@unique([userId, animeId])
  @@index([userId])
  @@index([status])
  @@index([userId, status]) // Índice compuesto para filtrar por usuario y estado
  @@index([userId, isFavorite]) // Índice para favoritos de usuario
  @@index([userId, score]) // Índice para ordenar por puntuación del usuario
}

enum AnimeStatus {
  WATCHING
  COMPLETED
  ON_HOLD
  DROPPED
  PLAN_TO_WATCH
}

// Modelo para reseñas de usuarios
model Review {
  id             String   @id @default(cuid())
  userId         String
  animeListEntryId String
  animeId        Int
  content        String   @db.Text
  rating         Float    // Calificación (0-10)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  animeListEntry AnimeListEntry @relation(fields: [animeListEntryId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([animeId])
}

// Modelo para recomendaciones estilo red social
model Recommendation {
  id             String   @id @default(cuid())
  userId         String
  animeId        Int      // ID de MyAnimeList/Jikan API
  animeTitle     String   // Guardamos el título para no hacer fetch constante
  animeImage     String?  // URL de la imagen
  content        String   @db.Text // Reseña/opinión del usuario
  rating         Float    // Puntuación (0-10)
  spoilers       Boolean  @default(false) // Si contiene spoilers
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  likes          RecommendationLike[]

  @@unique([userId, animeId]) // Prevenir duplicados: una recomendación por usuario/anime
  @@index([userId])
  @@index([animeId])
  @@index([createdAt])
  @@index([rating]) // Para ordenar por puntuación (top-rated)
  @@index([animeId, rating]) // Para obtener mejores recomendaciones de un anime
}

// Modelo para likes en recomendaciones
model RecommendationLike {
  id               String   @id @default(cuid())
  userId           String
  recommendationId String
  createdAt        DateTime @default(now())

  user             User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  recommendation   Recommendation @relation(fields: [recommendationId], references: [id], onDelete: Cascade)

  @@unique([userId, recommendationId])
  @@index([recommendationId])
}
